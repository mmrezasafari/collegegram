{
  "name": "collegegram",
  "version": "1.0.0",
  "description": "",
  "license": "ISC",
  "author": "KosarAsadipour",
  "type": "commonjs",
  "main": "main.ts",
  "scripts": {
    "test": "NODE_ENV=test jest --testMatch **/tests/units/**/*.spec.ts -i",
    "test:e2e": "NODE_ENV=test jest --testMatch **/tests/e2e/**/*.spec.ts -i",
    "start": "nodemon src/main.ts",
    "copy-files": "cp -r src/docs dist/src/docs",
    "build": "tsc && npm run copy-files",
    "start:production": "npm run build && NODE_ENV=production node ./dist/src/main.js",
    "migration:run": "npx typeorm-ts-node-commonjs migration:run -d ./src/data-source.ts",
    "migration:revert": "npx typeorm-ts-node-commonjs migration:revert -d ./src/data-source.ts",
    "migration:generate": " npx ts-node ./node_modules/typeorm/cli.js migration:generate -d ./src/data-source.ts"
  },
  "dependencies": {
    "bcrypt": "^6.0.0",
    "cookie-parser": "^1.4.7",
    "cors": "^2.8.5",
    "dotenv-flow": "^4.1.0",
    "express": "^5.1.0",
    "glob": "^10.4.5",
    "jsonwebtoken": "^9.0.2",
    "lodash.merge": "^4.6.2",
    "minio": "^8.0.6",
    "multer": "^2.0.2",
    "nodemon": "^3.1.10",
    "pg": "^8.16.3",
    "reflect-metadata": "^0.2.2",
    "swagger-jsdoc": "^6.2.8",
    "swagger-ui-express": "^5.0.1",
    "ts-node": "^10.9.2",
    "typeorm": "^0.3.25",
    "yamljs": "^0.3.0",
    "zod": "^4.0.17"
  },
  "devDependencies": {
    "@types/bcrypt": "^6.0.0",
    "@types/cookie-parser": "^1.4.9",
    "@types/cors": "^2.8.19",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/jsonwebtoken": "^9.0.10",
    "@types/lodash.merge": "^4.6.9",
    "@types/minio": "^7.1.0",
    "@types/multer": "^2.0.0",
    "@types/pg": "^8.15.5",
    "@types/supertest": "^6.0.3",
    "@types/swagger-jsdoc": "^6.0.4",
    "@types/swagger-ui-express": "^4.1.8",
    "@types/yamljs": "^0.2.34",
    "cross-env": "^10.0.0",
    "jest": "^30.0.5",
    "rimraf": "^6.0.1",
    "supertest": "^7.1.4",
    "ts-jest": "^29.4.1"
  }
}